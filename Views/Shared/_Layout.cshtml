<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Project Catalyst</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img id="imgLogo" class="d-inline-block align-top" src="~/images/iohk_logo.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav">
                        <li>
                            <div class="input-group ml-3">
                                <select class="custom-select">
                                    <option>Home</option>
                                    <option Selected>Community Landing</option>
                                    <option>Top Collaborators</option>
                                    <option class="dropdown-divider"></option>
                                </select>
                                <div class="input-group-append">
                                    <button class="btn btn-secondary" type="button"><i class="fa fa-file"></i></button>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="mr-3">
                            <div class="d-flex">
                                <input class="form-control me-2" placeholder="Search Ideas" />
                                <button class="btn btn-secondary"><i class="fa fa-search"></i></button>
                            </div>
                        </li>
                         @{
                            if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <li  class="nav-item">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary" type="button" data-toggle="dropdown">
                                            <i class="fa-solid fa-compass"></i>
                                        </button>
                                    </div>
                                </li>
                                <li  class="nav-item">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary" type="button" data-toggle="dropdown">
                                            <i class="fa-solid fa-flag"></i>
                                        </button>
                                    </div>
                                </li>
                                <li  class="nav-item">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary" type="button" data-toggle="dropdown">
                                            <i class="fa-solid fa-square-check"></i>
                                        </button>
                                    </div>
                                </li>
                                <li  class="nav-item">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary" type="button" data-toggle="dropdown">
                                            <i class="fa-solid fa-bell"></i>
                                        </button>
                                    </div>
                                </li>
                                <li  class="nav-item">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary" type="button" data-toggle="dropdown">
                                            <i class="fa-solid fa-envelope"></i>
                                        </button>
                                    </div>
                                </li>
                                <li  class="nav-item">
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary btn-outline-light" type="button" data-toggle="dropdown">
                                            <i class="fa-solid fa-circle-plus fa-2xl" style="color: darkorange;"></i>
                                        </button>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
                                </li>
                            }
                            else
                            {
                                    <li>
                                        <a href="/User/Create" class="btn btn-outline-secondary" type="button">
                                            <i class="fa fa-user-plus"></i> Register
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Secured" class="btn btn-outline-secondary" type="button">
                                            <i class="fa fa-arrow-circle-right"></i> Log in
                                        </a>
                                    </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="footer row mt-5 pt-5">
                <div class="col-lg-5 col-md-12">
                    <img src="Images/catalyst_logo.png" width="180" />
                </div>
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col-lg-4 col-md-12">
                            <h4>About</h4>
                            <ul>
                                <li>
                                    <a href="#">The Project</a>
                                </li>
                                <li>
                                    <a href="#">Submit an Idea</a>
                                </li>
                                <li>
                                    <a href="#">Browse Ideas</a>
                                </li>
                                <li>
                                    <a href="#">FAQs</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-4 col-md-12">
                            <h4>Contact</h4>
                            <ul>
                                <li>
                                    <a href="https://t.me/cardanocatalyst">Join us on Telegram</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <hr />
                    <br />
                    <p class="text-center ">Catalyst @DateTime.Now.Year &copy; All rights reserved</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
